<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_EnterName">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_background"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ICE AGE"
        android:textSize="64sp"
        android:textStyle="bold"
        android:layout_above="@id/enter_name_edit_text"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:textColor="#88002AFF"
        />

    <EditText
        android:id="@+id/enter_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColorHint="#296161"
        android:textAlignment="center"
        android:hint="Enter your name" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_BTN_getNamebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/enter_name_edit_text"
        android:layout_marginTop="64dp"
        android:text="START GAME"
        android:backgroundTint="#4DEBFF"
        android:textColor="#296161"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>


